{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block stylesheets%}

 <link rel="stylesheet" href="/assets/css/login.css" />
{% endblock %}
{% block body %}

  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign In</h5>
            <form action="{{ path('login') }}" method="post" class="form-signin">
            {% if err is defined and err.notValid is defined %}
               {{ err.notValid }}
            {% endif %}
              <div class="form-label-group">
                <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email address" autocomplete="off" required autofocus>
                <label for="inputEmail">Email address</label>
              </div>

              <div class="form-label-group">
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" autocomplete="off" required>
                <label for="inputPassword">Password</label>
              </div>

              
              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
              <hr class="my-4">
             </form>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
